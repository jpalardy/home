{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src/ts",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "test/*.ts",
    "subs/**/*.ts"
  ]
}
